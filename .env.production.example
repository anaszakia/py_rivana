# Production Environment Configuration
# Copy this file to .env.production and update values

# Environment
ENVIRONMENT=production

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=False

# Security - IMPORTANT: Change these in production!
SECRET_KEY=your_secret_key_here_min_32_chars_random
API_TOKEN=your_secure_api_token_here_min_32_chars_random

# Paths (absolute paths recommended for production)
RESULTS_DIR=/var/www/itriverdna.my.id/public_html/py_rivana/results
TEMP_DIR=/var/www/itriverdna.my.id/public_html/py_rivana/temp

# Earth Engine
EE_AUTHENTICATED=True

# Limits
MAX_CONCURRENT_JOBS=2
JOB_TIMEOUT=1800

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/py-rivana-api.log

# Performance
ENABLE_CORS=True
ENABLE_CACHE=False
CACHE_TTL=300

# Rate Limiting (optional)
RATE_LIMIT_ENABLED=False
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
