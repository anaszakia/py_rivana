# Environment Configuration for Production VPS
# Copy this file to .env.production and fill in your values

# ==============================================
# ENVIRONMENT
# ==============================================
ENVIRONMENT=production

# ==============================================
# API CONFIGURATION
# ==============================================
API_HOST=0.0.0.0
API_PORT=8001
DEBUG=False

# ==============================================
# PATHS (Use absolute paths in production)
# ==============================================
RESULTS_DIR=/home/hidrologi/project_hidrologi_ml/results
TEMP_DIR=/home/hidrologi/project_hidrologi_ml/temp

# ==============================================
# GOOGLE EARTH ENGINE
# ==============================================
EE_AUTHENTICATED=True

# ==============================================
# SECURITY
# IMPORTANT: Change these tokens before deployment!
# Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
# ==============================================
SECRET_KEY=YOUR_SECRET_KEY_HERE_CHANGE_THIS
API_TOKEN=YOUR_API_TOKEN_HERE_CHANGE_THIS

# ==============================================
# PERFORMANCE & LIMITS
# ==============================================
MAX_CONCURRENT_JOBS=2
JOB_TIMEOUT=1800

# ==============================================
# LOGGING
# ==============================================
LOG_LEVEL=INFO
LOG_FILE=/home/hidrologi/project_hidrologi_ml/logs/api.log

# ==============================================
# FEATURES
# ==============================================
ENABLE_CORS=True
ENABLE_CACHE=True
CACHE_TTL=600

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
